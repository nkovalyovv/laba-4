#include <iostream>
#include <cmath>

using namespace std;

void trianglep(double a, double& p, double& s) {
	p = 3 * a;
	s = a * a * sqrt(3) / 4;
}

int main() {
	setlocale(LC_ALL, "rus");
	double a1, a2, a3;
	double p1, s1, p2, s2, p3, s3;

	cout << "Введите сторону первого тругольника: ";
	cin >> a1;
	if (a1 < 0) {
		cout << "Введите коректное значение!";
		return 0;
	}
	else if (cin.fail()) {
		cout << "Введите коректное значение!";
		return 0;
	}
	trianglep(a1, p1, s1);
	cout << "Периметр первого треугольника: " << p1 << endl;
	cout << "Площадь первого треугольника: " << s1 << endl;

	cout << "Введите сторону второго тругольника: ";
	cin >> a1;
	if (a1 < 0) {
		cout << "Введите коректное значение!";
		return 0;
	}
	else if (cin.fail()) {
		cout << "Введите коректное значение!";
		return 0;
	}
	trianglep(a1, p1, s1);
	cout << "Периметр второго треугольника: " << p1 << endl;
	cout << "Площадь второго треугольника: " << s1 << endl;

	cout << "Введите сторону третьего тругольника: ";
	cin >> a1;
	if (a1 < 0) {
		cout << "Введите коректное значение!";
		return 0;
	}
	else if (cin.fail()) {
		cout << "Введите коректное значение!";
		return 0;
	}
	trianglep(a1, p1, s1);
	cout << "Периметр третьего треугольника: " << p1 << endl;
	cout << "Площадь третьего треугольника: " << s1 << endl;

	system("pause");
	return 0;
}
