#include <iostream>

using namespace std;

double sr(float x[], int n) {
    float sum = 0;
    float count = 0;
    for (int i = 0; i < n; i++) {
        if (x[i] > 0) {
            sum += x[i];
            count++;
        }
    }

    if (count == 0) {
        return 0;
    }

    return (sum) / count;
}

int main() {
    setlocale(LC_ALL, "rus");
    int n, m, k;

    cout << "Введите размер массива x: ";
    cin >> n;
    if (cin.fail()) {
        cout << "Введите коректное значение!";
    }
    string nk = typeid(n).name();
    //if (nk == "float") {
     //   cout << "Введите коректное значение!";
     //   return 0;
    //}
    float x[n];

    cout << "Введите элементы массива x: ";
    for (int i = 0; i < n; i++) {
        cin >> x[i];
        if (cin.fail()) {
            cout << "Введите коректное значение!";
        }
    }

    cout << "Введите размер массива y: ";
    cin >> m;
    if (cin.fail()) {
        cout << "Введите коректное значение!";
    }
    float y[m];

    cout << "Введите элементы массива y: ";
    for (int i = 0; i < m; i++) {
        cin >> y[i];
        if (cin.fail()) {
            cout << "Введите коректное значение!";
        }
    }

    cout << "Введите размер массива z: ";
    cin >> k;
    float z[k];

    cout << "Введите элементы массива z: ";
    for (int i = 0; i < k; i++) {
        cin >> z[i];
    }

    float avgX = sr(x, n);
    float avgY = sr(y, m);
    float avgZ = sr(z, k);

    cout << "Среднее арифмметическое массива x: " << avgX << endl;
    cout << "Среднее арифмметическое массива y: " << avgY << endl;
    cout << "Среднее арифмметическое массива z: " << avgZ << endl;

    return 0;
}
